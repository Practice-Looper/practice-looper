<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emka.PracticeLooper.Mobile.Views.OnboardingView">
   
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Margin="0,10,10,0"
                BackgroundColor="Transparent"
                HorizontalOptions="End"
                Text="Überspringen"
                Command="{Binding SkipCommand}"
                TextColor="{DynamicResource PrimaryColor}" />

            <BoxView BackgroundColor="{DynamicResource BackgroundColor}" Grid.RowSpan="2"/>

            <StackLayout Grid.Row="1">
                <CarouselView
                ItemsSource="{Binding Items}"
                IndicatorView="indicatorView">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <StackLayout>
                                <Label Text="{Binding Title}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       TextColor="{DynamicResource SecondaryColor}"
                                       FontSize="16" />
                                <Label Text="{Binding Content}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       TextColor="{DynamicResource SecondaryColor}" />
                            </StackLayout>
                        </ContentView>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <IndicatorView x:Name="indicatorView"
                           IndicatorColor="{DynamicResource PrimaryColor}"
                           SelectedIndicatorColor="{DynamicResource SecondaryColor}"
                           HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
