            BackgroundColor="{x:Static views:ColorConstants.Background}">
            <Grid
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                HeightRequest="300">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>
                <Entry
                    Placeholder="Enter project name"
                    Grid.Row="0"
