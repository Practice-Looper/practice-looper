<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Emka.PracticeLooper.Mobile"
    xmlns:forms="clr-namespace:Emka.PracticeLooper.Mobile.Views"
    x:Class="Emka.PracticeLooper.Mobile.MainPage"
    Title="Practice Looper"
    BackgroundColor="Teal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="7*" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="3*" />
        </Grid.RowDefinitions>
        <ContentView
            Grid.Row="0"
            BackgroundColor="Teal"
            Margin="10,0,10,30">
            <!--<ListView
                BackgroundColor="Teal"
                SeparatorColor="White" />-->
            <Button
                Text="ADD"
                BackgroundColor="White"
                VerticalOptions="Center"
                TextColor="Teal"
                Command="{Binding SelectSourceCommand}" />
        </ContentView>
        <BoxView
            Grid.Row="1"
            Color="White"
            WidthRequest="100"
            HeightRequest="2" />
        <ContentView
            Grid.Row="2"
            VerticalOptions="Center"
            Padding="10,0,10,0">
            <StackLayout>
                <!-- https://theconfuzedsourcecode.wordpress.com/2017/04/06/advanced-decorating-of-xamarin-forms-slider-for-android/-->
                <!-- https://forums.xamarin.com/discussion/21431/custom-range-slider-for-ios-->
                <!--<forms:RangeSlider
                    RangeValue="{Binding Minimum, Mode=TwoWay}"
                    Value="{Binding Maximum, Mode=TwoWay}" />-->
                <Slider
                    Value="{Binding MinimumValue}"
                    Minimum="0.0"
                    Maximum="1.0" />
                <Slider
                    Value="{Binding MaximumValue}"
                    Minimum="0.0"
                    Maximum="1.0" />
                <Button
                    Text="Loop"
                    Margin="0,10,0,10"
                    BackgroundColor="White"
                    TextColor="Teal"
                    Command="{Binding PlayCommand}">
                    <Button.Triggers>
                        <DataTrigger
                            TargetType="Button"
                            Binding="{Binding IsPlaying}"
                            Value="True">
                            <Setter
                                Property="Text"
                                Value="Stop" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Slider
                    VerticalOptions="Center" />
            </StackLayout>
        </ContentView>
    </Grid>
</ContentPage>